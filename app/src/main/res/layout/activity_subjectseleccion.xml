<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_subjectseleccion"
    android:background="@color/colorPrimaryDark"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="app.rojoyazul.com.android_app_project_movile.SubjectSelectionActivity">>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ScrollViewSubSelection"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/LayoutVerticalHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textMateria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subjectsTitle"
                android:theme="@style/TITULOS"
                android:layout_centerHorizontal="true"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="62.5dp"
                android:layout_marginLeft="62.5dp"

                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:id="@+id/Btn_Materia1"
                android:layout_below="@+id/textMateria"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:theme="@style/StyleBotones"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="62.5dp"
                android:layout_marginLeft="62.5dp"

                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:id="@+id/Btn_Materia2"
                android:layout_below="@+id/Btn_Materia1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:theme="@style/StyleBotones"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="62.5dp"
                android:layout_marginLeft="62.5dp"

                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:id="@+id/Btn_Materia3"
                android:layout_below="@+id/Btn_Materia2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:theme="@style/StyleBotones"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="62.5dp"
                android:layout_marginLeft="62.5dp"

                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:id="@+id/Btn_Materia4"
                android:layout_below="@+id/Btn_Materia3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:theme="@style/StyleBotones"/>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/ButtonNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/StyleBotones"
            android:src="@drawable/ic_help_white_24dp"
            android:layout_below="@+id/Btn_Materia4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"/>

    </LinearLayout>
</RelativeLayout>